<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CreateWalletActivity">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="@drawable/mnemonic_border"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMnemonic01"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic02"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic03"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic04"
                    style="@style/mnemonic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMnemonic05"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic06"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic07"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic08"
                    style="@style/mnemonic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMnemonic09"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic10"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic11"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic12"
                    style="@style/mnemonic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMnemonic13"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic14"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic15"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic16"
                    style="@style/mnemonic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMnemonic17"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic18"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic19"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic20"
                    style="@style/mnemonic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMnemonic21"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic22"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic23"
                    style="@style/mnemonic" />

                <EditText
                    android:id="@+id/etMnemonic24"
                    style="@style/mnemonic" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/InputViewName"
            android:layout_marginTop="16dp"
            android:text="@string/walletName" />

        <EditText
            android:id="@+id/etName"
            style="@style/InputViewContent"
            android:digits="@string/digits"
            android:hint="@string/inputWalletName"
            android:inputType="text"
            android:maxLength="12"
            android:singleLine="true" />

        <include
            android:id="@+id/nameLine"
            layout="@layout/include_input_line" />

        <TextView
            style="@style/InputViewTip"
            android:text="@string/walletNameFormat" />

        <com.hao.library.view.RoundTextView
            android:id="@+id/btnImport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="48dp"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/importWallet"
            android:textSize="@dimen/button_text"
            app:roundTextViewDisableColor="@color/colorPrimary8"
            app:roundTextViewNormalColor="@color/colorPrimary"
            app:roundTextViewNormalTextColor="@color/text_white"
            app:roundTextViewPressedColor="@color/colorPrimary"
            app:roundTextViewRadius="@dimen/button_radius" />

    </LinearLayout>
</LinearLayout>