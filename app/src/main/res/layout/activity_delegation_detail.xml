<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DelegationDetailActivity">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activityPadding"
        android:layout_marginTop="@dimen/activityPadding"
        android:layout_marginRight="@dimen/activityPadding"
        android:background="@drawable/shape_block"
        android:padding="@dimen/blockPadding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/textWhite"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/delegateTotalAmount"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/textWhite"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/waitReceiveReward"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activityPadding"
        android:layout_marginTop="@dimen/blockSpace"
        android:layout_marginRight="@dimen/activityPadding"
        android:background="@drawable/shape_block"
        android:orientation="vertical"
        android:padding="@dimen/blockPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/textWhite"
                android:textSize="14sp" />

        </LinearLayout>

        <include layout="@layout/include_block_line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/blockPadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/shares"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvShares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:textColor="@color/textWhite"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/selfShares"
                android:textColor="@color/textGray"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tvSelfShares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:textColor="@color/textWhite"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/rate"
                android:textColor="@color/textGray"
                android:textSize="12sp" />


            <TextView
                android:id="@id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:textColor="@color/textWhite"
                android:textSize="12sp" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvUnbondingDelegationAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activityPadding"
        android:layout_marginTop="@dimen/blockSpace"
        android:layout_marginRight="@dimen/activityPadding"
        android:background="@drawable/shape_block"
        android:gravity="center_horizontal"
        android:padding="@dimen/blockPadding"
        android:textColor="@color/textWhite"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/llBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activityPadding"
            android:layout_marginTop="@dimen/activityPadding"
            android:layout_marginRight="@dimen/activityPadding"
            android:orientation="horizontal">

            <com.hao.library.view.RoundTextView
                android:id="@+id/btnRedelegate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/redelegate"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />


            <com.hao.library.view.RoundTextView
                android:id="@+id/btnUndelegate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/undelegate"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/activityPadding"
            android:orientation="horizontal">


            <com.hao.library.view.RoundTextView
                android:id="@+id/btnReward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/receiveReward"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />

            <com.hao.library.view.RoundTextView
                android:id="@+id/btnDelegate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/delegate"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>