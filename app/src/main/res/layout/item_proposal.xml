<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activityPadding"
    android:layout_marginTop="@dimen/blockSpace"
    android:layout_marginRight="@dimen/activityPadding"
    android:background="@drawable/shape_block"
    android:padding="@dimen/blockPadding">

    <ImageView
        android:id="@+id/_ivArrow"
        android:layout_width="6dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textWhite"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:singleLine="true"
        android:textColor="@color/textWhite"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/_ivArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvId" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:maxLines="2"
        android:textColor="@color/textGray"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/_ivArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textColor="@color/textWhite"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/_ivArrow"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/statePoint"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvState"
        app:layout_constraintEnd_toStartOf="@id/tvState"
        app:layout_constraintTop_toTopOf="@id/tvState" />

</androidx.constraintlayout.widget.ConstraintLayout>

