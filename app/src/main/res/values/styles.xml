<resources>

    <style name="GAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="GStatusBarTransparentTheme" parent="GAppTheme">
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="WelcomeTheme" parent="GStatusBarTransparentTheme">
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="ThemeColorBgTheme" parent="GAppTheme">
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="android:windowBackground">@color/themeColor</item>
    </style>

    <style name="AppToolbarLayout">
        <item name="toolbarLayoutId">@layout/app_toolbar</item>
        <item name="toolbarBackgroundColor">@android:color/transparent</item>
        <item name="toolbarBackIcon">@drawable/ic_back</item>
        <item name="toolbarBackIconColor">@color/app_back</item>
        <item name="toolbarTitleTextSize">@dimen/app_title</item>
        <item name="toolbarTitleTextColor">@color/text_primary</item>
        <item name="toolbarShowLine">false</item>
        <item name="toolbarLineColor">@color/toolbarLineColor</item>
    </style>

    <style name="mnemonic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/mnemonic_bg</item>
        <item name="android:digits">@string/digits2</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputViewName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputViewContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_desc</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputViewTip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
