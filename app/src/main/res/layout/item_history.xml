<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activityPadding"
    android:layout_marginTop="@dimen/blockSpace"
    android:layout_marginRight="@dimen/activityPadding"
    android:background="@drawable/shape_block"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/blockPadding">

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/textWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBlockHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textColor="@color/textGray"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="6dp"
        android:layout_height="12dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_arrow_right" />

</LinearLayout>

