<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activityPadding"
    android:layout_marginTop="@dimen/blockSpace"
    android:layout_marginRight="@dimen/activityPadding"
    android:background="@drawable/shape_block"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/blockPadding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="2"
            android:singleLine="true"
            android:textColor="@color/textWhite"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="2"
        android:singleLine="true"
        android:textColor="@color/textWhite"
        android:textSize="14sp" />

</LinearLayout>