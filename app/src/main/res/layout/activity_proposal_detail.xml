<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ProposalDetailActivity">

    <include layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activityPadding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_block"
                android:orientation="vertical"
                android:padding="@dimen/blockPadding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/statusPoint"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/textWhite"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/textWhite"
                    android:textSize="12sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/proposer"
                        android:textColor="@color/textGray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvProposer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="80dp"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/proposalType"
                        android:textColor="@color/textGray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="80dp"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/voteStartTime"
                        android:textColor="@color/textGray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvVotingStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/voteEndTime"
                        android:textColor="@color/textGray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvVotingEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/myVote"
                        android:textColor="@color/textGray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvOpinion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/description"
                    android:textColor="@color/textGray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textWhite"
                    android:textSize="12sp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/blockSpace"
                android:background="@drawable/shape_block"
                android:padding="@dimen/blockPadding">

                <LinearLayout
                    android:id="@+id/_llYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/_llNo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/yes"
                        android:textColor="@color/proposalYes"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressYes"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_yes" />

                    <TextView
                        android:id="@+id/tvYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/_llNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/_llYes"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/no"
                        android:textColor="@color/proposalNo"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressNo"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_no" />

                    <TextView
                        android:id="@+id/tvNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/_llNoWithVeto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/_llAbstain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/_llYes">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/noWithVote"
                        android:textColor="@color/proposalNoWithVeto"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressNoWithVeto"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_no_with_veto" />

                    <TextView
                        android:id="@+id/tvNoWithVeto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/_llAbstain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/_llNoWithVeto"
                    app:layout_constraintTop_toTopOf="@id/_llNoWithVeto">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/abstain"
                        android:textColor="@color/proposalAbstain"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressAbstain"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_abstain" />

                    <TextView
                        android:id="@+id/tvAbstain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activityPadding"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/activityPadding"
            android:orientation="horizontal">

            <com.hao.library.view.RoundTextView
                android:id="@+id/btnYes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/yes"
                android:textColor="@color/proposalYes"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />


            <com.hao.library.view.RoundTextView
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="@color/proposalNo"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activityPadding"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/activityPadding"
            android:layout_marginBottom="@dimen/activityPadding"
            android:orientation="horizontal">

            <com.hao.library.view.RoundTextView
                android:id="@+id/btnNoWithVeto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/noWithVote"
                android:textColor="@color/proposalNoWithVeto"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />

            <com.hao.library.view.RoundTextView
                android:id="@+id/btnAbstain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/abstain"
                android:textColor="@color/proposalAbstain"
                android:textSize="12sp"
                app:roundTextViewBorderColor="@color/btnBorderColor"
                app:roundTextViewBorderWidth="@dimen/buttonBorder"
                app:roundTextViewNormalTextColor="@color/btnTextColor"
                app:roundTextViewRadius="@dimen/buttonRadius" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>