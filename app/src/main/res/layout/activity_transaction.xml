<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.TransactionActivity">

    <com.hao.library.view.ToolbarLayout
        android:id="@+id/baseToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight">

        <ImageView
            android:id="@+id/ivScan"
            style="@style/TitleMenu"
            android:src="@drawable/ic_scan" />

    </com.hao.library.view.ToolbarLayout>


    <TextView
        style="@style/InputViewName"
        android:layout_marginTop="16dp"
        android:text="@string/receiveAddress" />

    <EditText
        android:id="@+id/etToAddress"
        style="@style/InputViewContent"
        android:digits="@string/digits"
        android:hint="@string/inputToAddress" />

    <include
        android:id="@+id/toAddressLine"
        layout="@layout/include_input_line" />

    <TextView
        style="@style/InputViewName"
        android:layout_marginTop="32dp"
        android:text="@string/amountDip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etAmount"
            style="@style/InputViewContent"
            android:layout_width="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:digits="0123456789."
            android:hint="@string/inputAmount"
            android:inputType="numberDecimal"
            android:maxLength="19"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="@string/all"
            android:textColor="@color/textPrimary"
            android:textSize="14sp" />

    </LinearLayout>

    <include
        android:id="@+id/amountLine"
        layout="@layout/include_input_line" />

    <TextView
        android:id="@+id/tvBalance"
        style="@style/InputViewTip" />

    <TextView
        style="@style/InputViewName"
        android:layout_marginTop="32dp"
        android:text="@string/remarks" />

    <EditText
        android:id="@+id/etRemarks"
        style="@style/InputViewContent"
        android:layout_marginTop="8dp"
        android:hint="@string/remarks"
        android:inputType="text"
        android:maxLength="100" />

    <include
        android:id="@+id/remarksLine"
        layout="@layout/include_input_line" />

    <com.hao.library.view.RoundTextView
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginLeft="@dimen/activityPadding"
        android:layout_marginTop="48dp"
        android:layout_marginRight="@dimen/activityPadding"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="@dimen/buttonText"
        app:roundTextViewBorderColor="@color/btnBorderColor"
        app:roundTextViewBorderWidth="@dimen/buttonBorder"
        app:roundTextViewNormalTextColor="@color/btnTextColor"
        app:roundTextViewRadius="@dimen/buttonRadius" />

</LinearLayout>